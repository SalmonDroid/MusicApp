<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".ArtistsActivity"
            android:label="@string/activity_artists"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".PlayingActivity"
            android:label="@string/activity_playing"
            android:parentActivityName=".ArtistsActivity"/>
        <activity android:name=".AlbumsActivity"
            android:label="@string/activity_albums"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".SongsActivity"
            android:label="@string/activity_songs"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".FeaturedActivity"
            android:label="@string/activity_featured"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".GenreActivity"
            android:label="@string/activity_genre"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".PlaylistsActivity"
            android:label="@string/activity_playlists"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>